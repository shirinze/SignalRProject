@model CreateBookingDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadPartialComponent")

<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarPartialComponent")

    <!-- book section -->
    <section class="book_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Rezervasyon Oluşturun
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div>
                                <input type="text" class="form-control" placeholder="Adınız Soyadınız" asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="text" class="form-control" placeholder="Telefon" asp-for="Phone" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="email" class="form-control" placeholder="mail" asp-for="Mail" />
                                <span asp-validation-for="Mail" class="text-danger"></span>
                            </div>
                            <div>
                                <select class="form-control nice-select wide" asp-for="PersonCount">
                                    <option value="" disabled selected>
                                        Kaç kişisiniz?
                                    </option>
                                    <option value="1">
                                        1
                                    </option>
                                    <option value="2">
                                        2
                                    </option>
                                    <option value="3">
                                        3
                                    </option>
                                    <option value="4">
                                        4
                                    </option>
                                    <option value="5">
                                        5
                                    </option>
                                    <option value="6">
                                        6++
                                    </option>
                                </select>
                                <span asp-validation-for="PersonCount" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="date" class="form-control" asp-for="Date">
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="btn_box">
                                <button>
                                   Yerinizi Ayırtın
                                </button>
                              
                            </div>
                            
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_container ">
                        <iframe src="@ViewBag.location" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end book section -->
    <!-- footer section -->
    @await Component.InvokeAsync("_UILayoutFooterPartialComponent")
    @await Component.InvokeAsync("_UILayoutScriptPartialComponent")

</body>

</html>