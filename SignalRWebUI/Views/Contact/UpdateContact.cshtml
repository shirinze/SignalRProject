@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İletişim Bilgileri Güncelleme Sayfası</div>
						</div>
						<input type="hidden" asp-for="ContactID" />
						<div class="card-body">
							<div class="form-group">
								<label for="Location">Lokasyonu Giriniz</label>
								<input type="text" class="form-control" asp-for="Location" id="Location">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon Numarası Giriniz</label>
								<input type="text" class="form-control" asp-for="Phone" id="Phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Email Aderesi Giriniz</label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="footertitle">Alt Başlık</label>
								<input type="text" class="form-control" asp-for="FooterTıtle" id="footertitle">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="opendays">Açık Günler</label>
								<input type="text" class="form-control" asp-for="OpenDays" id="opendays">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="opendaysdescription">Açık günler açıklama</label>
								<input type="text" class="form-control" asp-for="OpenDaysDescription" id="opendaysdescription">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="openhours">Açık Saatler</label>
								<input type="text" class="form-control" asp-for="OpenHours" id="openhours">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="FooterDescription">Açıklama Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="FooterDescription" id="FooterDescription"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Bilgi Güncelle</button>
						</div>

					</div>
				</form>
			</div>
		</div>
	</div>
</div>

